<UserControl x:Class="LockSmith.SL.Controls.TechnicianScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls">    
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="First Name"/>
                <TextBox x:Name="txtFirstName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Name"/>
                <TextBox x:Name="txtLasttName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Phone"/>
                <TextBox x:Name="txtPhone" Width="200"/>
            </StackPanel> 
            <Button Content="Update" Width="100" Click="Button_Click"/>        
        </StackPanel>           
    </Grid>
</UserControl>
